<DataPoint>:
    canvas:
        Ellipse:
            pos: self.pos
            size: 10, 10    

<HueLayout>:
    xlabel: xlabel
    ylabel: ylabel
    pt1_x: pt1_x
    pt1_y: pt1_y
    pt1: pt1
    
    BoxLayout:
        size: 1000, 500
        orientation: 'horizontal'
        RelativeLayout:
            size: 500, 500
            #cieBackground:
            Image:
                source: 'cie_xyz_clear.png'
                size: 870/2,972/2

            DataPoint:
                id: pt1
                #pos: 200, 200

        GridLayout:
            cols: 2
            Label:
                id: xlabel
                text: 'x: '
                size_hint_y: 0.2
            Slider:
                id: pt1_x
                min: 50
                max: 256
                value: 100
                on_value: root.x1_adj(*args)
            Label:
                id: ylabel
                text: 'y: ' + '     - '
                size_hint_y: 0.2            
            Slider:
                id: pt1_y
                min: 340
                max: 460
                value: 415
                on_value: root.y1_adj(*args)
